@model Domain.Dtos.Crypto.CryptoInfoDto[]

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(modelItem => modelItem[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Symbol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Logo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].CurrentPriceUsd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].PercentChangePerHour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].PercentChangePerDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].CapitalizationMarketCap)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].UpdateTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Symbol)
                </td>
                <td>
                    <img src="@item.Logo">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CurrentPriceUsd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PercentChangePerHour)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PercentChangePerDay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CapitalizationMarketCap)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdateTime)
                </td>
            </tr>
        }
    </tbody>
</table>

<div page-model="" sort-order=@ViewData["sort"] page-action="QuotesView"></div>